@page
@model MyExpenseTracker.Pages.Transactions.CreateModel
@{
}

<br />
<h2>New Transaction</h2>

@if (Model.errorMessage.Length>0){
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Icon</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="emoji" value="@Model.transactionInfo.emoji" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Description</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="description" value="@Model.transactionInfo.description" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Amount</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="amount" value="@Model.transactionInfo.amount" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Category</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="category" value="@Model.transactionInfo.category" />
        </div>
    </div>
    @* <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Category</label>
        <div class="col-sm-6">
            <select class="form-control" name="category">
                <option value="" disabled selected>Select a category...</option>
                <option value="@Model.transactionInfo.category">Expenses</option>
                <option value="@Model.transactionInfo.category">Income</option>
            </select>
        </div>
    </div> *@

    @if (Model.successMessage.Length >0){
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>